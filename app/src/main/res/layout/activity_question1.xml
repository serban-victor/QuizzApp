<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care este capitala Romaniei?"
        android:textSize="24sp"
        android:layout_marginBottom="16dp" />
    <RadioGroup
        android:id="@+id/radioGroupAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radioButtonBucuresti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bucuresti" />
        <RadioButton
            android:id="@+id/radioButtonCluj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cluj" />
        <RadioButton
            android:id="@+id/radioButtonIasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iasi" />
    </RadioGroup>
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UrmÄƒtoarea"
        android:layout_marginTop="16dp" />
</LinearLayout>
